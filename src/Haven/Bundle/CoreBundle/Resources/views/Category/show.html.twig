{%  extends "::base.html.twig" %}
{% import "::macro/route/suffix.html.twig" as route_suffix %}
{% block inside_theater %}
<h1>Person</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.getId() }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.getName() }}</td>
        </tr>
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ route_suffix.list('haven_core_category_list', 'category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ route_suffix.edit('haven_core_category_edit', 'category', entity.id) }}">
            Edit
        </a>
    </li>
    <li>
        {#<form action="{{ path('HavenPersonaBundle_PersonDelete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>#}
    </li>
</ul>
{% endblock inside_theater %}