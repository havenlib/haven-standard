<h2>{{"web.faq.list" | trans}}</h2>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>{{"web.status" | trans | capitalize }}</th>
            <th>{{"web.rank" | trans | capitalize }}</th>
            <th>{{"web.question" | trans | capitalize }}</th>
            <th>{{"web.response" | trans | capitalize }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="sortable">
        {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</td>
            <td>{{ entity.status }}</td>
            <td>
                <form action="{{ path('haven_web_faq_rank', {'id': entity.id}) }}" method="post">
                    {{ form_widget(rank_forms[entity.getId()]) }}
                </form>
            </td>
            <td>{{ entity.question }}</td>
            <td>{{ entity.response }}</td>
            <td>
                <ul>
                    <li><a href="{{ path('haven_web_faq_edit', {'id': entity.id}) }}">{{"web.to.edit" | trans | capitalize }}</a></li>
                    <li>
                        <form action="{{ path('haven_web_faq_delete', {'id': entity.id}) }}" method="post">
                            {{ form_widget(delete_forms[entity.getId()]) }}
                        </form>
                    </li>
                </ul>
            </td>
        </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    {{ "web.no.entities" |trans }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="{{ path('haven_web_faq_create') }}">
            {{ "web.create.a.new.entity" | trans | capitalize }}
        </a>
    </li>
</ul>

