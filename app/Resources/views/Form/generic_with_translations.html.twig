{% block form_rows %}
{% spaceless %}
    {% for child in form %}
        {% if "translations" == child.vars.name %}
        {% form_theme child "::Form/translations.html.twig" %}
        {% endif %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock form_rows %}

{% block form_widget_simple %}
    {% spaceless %}
        {% set type = type|default('text') %}
    {% if type == "file" and attr.multiple is defined %} 
        {% set full_name = full_name~"[]" %}
    {% endif %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}  />
    {% endspaceless %}
{% endblock form_widget_simple %}

