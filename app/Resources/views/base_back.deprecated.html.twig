<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Haven Solutions Technologiques{% endblock %}</title>
        <!-- script src="/js/libs/modernizr-2.5.2.min.js"></script -->
        <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
        {% block stylesheets %}
            {% if app.environment != 'prod' %}
        <!-- Switch environnement développement développement:  -->
        <script type="text/javascript"> less = { env: 'development' }; </script>

        <!-- JS -->
        <link href="{{ asset("less/base.less") }}" rel="stylesheet/less" type="text/css" />

        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset("css/bootstrap-responsive.min.css") }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset("css/bootstrap.min.css") }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset("css/ui-lightness/jquery-ui-1.9.1.custom.min.css") }}" />
            {% else %}
        <link rel="stylesheet" type="text/css" href="/css/base.css" />
            {% endif %}
        {% endblock %}

        <!-- JS -->
        <script src="{{ asset("js/jquery.min.js") }}"></script>
        <script src="{{ asset("js/bootstrap.min.js") }}" type="text/javascript"></script>
        <script src="{{ asset("js/less-1.3.0.min.js") }}" type="text/javascript"></script>
        <script src="{{ asset("js/ckeditor/ckeditor.js") }}" type="text/javascript"></script>
        <script src="{{ asset("js/jquery-ui-1.9.1.custom.min.js") }}" type="text/javascript"></script>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"  type="image/x-icon"  />
    </head>
    <body class="backend">
        <div class="wrapper">
                
            {% if app.session.hasFlash("notice")%}
                    <div class="notice">
                {{ app.session.flash("notice") }}
                        </div>
            {% endif %}
            {% if app.session.hasFlash("error") %}
                        <div class="error">
                {{ app.session.flash("error") }}
                            </div>
            {% endif %}
            {% if app.session.hasFlash("success") %}
                            <div class="success">
                {{ app.session.flash("success") }}
                                </div>
            {% endif %}
            {% if app.session.hasFlash("info") %}
                                <div class="info">
                {{ app.session.flash("info") }}
                                    </div>
            {% endif %}
            {#{ app.session["_locale"] }#}
            {% block body %}
                <header>
                    {% block header %}
                    <a class="logo" href="{#{ path('WebsiteSiteBundle_Home')}#}">
                        <img src="/bundles/websitesite/images/haven_modified.png" alt="haven-logo" />
                    </a>
                    <div class="lang pull-right">
                        {{ render(url('core_switcher_widget', {"_locale" : app.getRequest().get("_locale"), "template" : "OwnerSiteBundle:Core:i18nSwitcher.html.twig"})) }}
                    </div>
                    {% endblock header %}
                </header>

                {% block main %}
                <div id="main">
                    {% block main_content %}
                        {% block aside_left %}
                        <div class="aside_left">
                            {% block aside_left_content %}
                            <div class="menu">
                                <ul>
                                    <li><h4>Faq</h4>
                                        <ul>
                                            <li><a href="{{ path("HavenWebBundle_FaqNew") }}">Ajouter</a></li>
                                            <li><a href="{{ path("HavenWebBundle_FaqList") }}">Voir la liste</a></li>
                                        </ul>
                                    </li>
                                    <li><h4>Posts</h4>
                                        <ul>
                                            <li><a href="{{ path("HavenWebBundle_PostNew") }}">Ajouter</a></li>
                                            <li><a href="{{ path("HavenWebBundle_PostList") }}">Voir la liste</a></li>
                                        </ul>
                                    </li>
                                    <li><h4>Produits</h4>
                                        <ul>
                                            <li>Ajouter</li>
                                            <li>Modifier</li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            {% endblock aside_left_content %}
                        </div>
                        {% endblock aside_left %}
                        
                        {% block middle %}
                        <div class="middle">
                            {% block middle_content %}
                                this is middle
                            {% endblock middle_content %}
                        </div>
                        {% endblock middle %}
                        
                        {% block aside_right %}
                        <div class="aside_right">
                            {% block aside_right_content %}
                                <div class="input-append">
                                    <input class="span2" id="appendedInputButtons" type="text">
                                    <button class="btn" type="button">Search</button>
                                </div>
                            {% endblock aside_right_content %}
                        </div>
                        {% endblock aside_right %}
                        
                    {% endblock main_content %}
                </div>
                {% endblock main %}

                {% block footer %}
                <footer>
                    {% block footer_content %}
                        <p> COPYRIGHT © Haven - All right reserved 1970 - 2012 </p>
                    {% endblock footer_content %}
                </footer>
                {% endblock footer %}
            {% endblock body %}
            {% block javascripts %}{% endblock javascripts %}
        </div>
    </body>
</html>